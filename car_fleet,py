def carFleet(target, position, speed):
    # Pair each car with its position and speed
    cars = sorted(zip(position, speed), reverse=True)
    
    fleets = 0
    prev_time = 0  # Track time taken by the last fleet
    
    for pos, spd in cars:
        # Time required to reach the target from current position
        time = (target - pos) / spd
        
        # If this car takes longer than previous fleet, it's a new fleet
        if time > prev_time:
            fleets += 1
            prev_time = time  # Update fleet's time
    
    return fleets


# âœ… Example Test Cases
print(carFleet(12, [10, 8, 0, 5, 3], [2, 4, 1, 1, 3]))  # Output: 3
print(carFleet(10, [3], [3]))                          # Output: 1
print(carFleet(100, [0, 2, 4], [4, 2, 1]))             # Output: 1
